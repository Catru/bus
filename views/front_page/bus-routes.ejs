<%- include header%>

<link rel="stylesheet" href="/stylesheets/bus-routes.css">
<div class="container">
    <div class="row">
        <form action="/busroutes" method="post">
        <div class="col-md-6 col-md-offset-3">
            <input type="text" name="bus-route" class="form-control" <%if(busRoute.length>0){%>value="<%= busRoute %>"<%}%> placeholder="公交线路名称，如&quot; 616&quot; ">
        </div>
        <div class="col-md-6 col-md-offset-3">
            <input type="submit" class="btn btn-primary query" value="查询">
        </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <% if(busRoute.length >0){ %>
            <h3><%= busRoute.toString() %></h3>
            <h4>途经公交站台：</h4>
            <% } %>
            <% if(error.length > 0){ %>
            <h3><%= error.toString() %></h3>
            <% } %>
            <% if(busStops.length > 0){ %>
            <ul class="list-group">
                <% busStops.forEach(function(busStop){ %>
                <li class="list-group-item">
                    <div><%= busStop.stop_name %></div>
                </li>
                <% }); %>
            </ul>
            <% } %>
        </div>
    </div>
</div>

<%- include footer%>